{
    "extends": [
        "./node_modules/cloudify-ui-common/eslint/eslint-common-react.json"
    ],
    "parser": "babel-eslint",
    "rules": {
        "no-console": "error",
        "prefer-promise-reject-errors": ["off"],
    },
    "overrides": [
        {
            "files": ["./*.js", "scripts/*.js"],
            "rules": {
                "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
                "no-console": "off",
                "security/detect-child-process": "off"
            },
            "env": {
                "node": true
            }
        }
    ],
    "globals": {
        "_": true,
        "$": true,
        "connectToStore": true,
        "d3": true,
        "log": true,
        "L": true,
        "moment": true,
        "React": true,

        "Stage": true
    }
}
