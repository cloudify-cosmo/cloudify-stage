{
    "plugins": [
        "jest"
    ],
    "extends": [
        "plugin:jest/recommended"
    ],
    "settings": {
        "import/resolver": {
            "jest": {
                "jestConfigFile": "jest.config.js"
            }
        }
    },
    "rules": {
        "global-require": "off",
        "no-console": "off",
        "node/no-missing-require": "off"
    },
    "env": {
        "jest": true
    }
}
