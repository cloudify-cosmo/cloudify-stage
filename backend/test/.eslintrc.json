{
    "plugins": [
        "jest"
    ],
    "extends": [
        "plugin:jest/recommended"
    ],
    "rules": {
        "global-require": "off",
        "no-console": "off",
        "node/no-missing-import": ["error", {"tryExtensions": [".js", ".json", ".ts"], "resolvePaths":  ["backend", ".."]}],
        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    },
    "env": {
        "jest": true
    }
}
