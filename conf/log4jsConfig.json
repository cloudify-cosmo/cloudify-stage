{
  "appenders": {
    "access": {
      "type": "dateFile",
      "filename": "/var/log/cloudify/stage/access.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "app": {
      "type": "file",
      "filename": "/var/log/cloudify/stage/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": {
        "type": "file",
        "filename": "/var/log/cloudify/stage/errors.log"
      }
    },
    "console": {
      "type": "console"
    }
  },
  "categories": {
    "default": { "appenders": [ "access", "app", "errors", "console" ], "level": "info" }
  }
}