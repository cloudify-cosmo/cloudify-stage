{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Page definition",
  "properties": {
    "name": {
      "type": "string",
      "description": "Page name"
    },
    "layout": {
      "type": "array",
      "minItems": 1,
      "description": "List of page layouts",
      "items": {
        "type": "object",
        "description": "Page layout definition",
        "properties": {
          "type": {
            "description": "Page layout type (widgets or tabs)",
            "enum": [
              "widgets",
              "tabs"
            ]
          },
          "content": {
            "type": "array",
            "minItems": 1,
            "description": "List of widgets",
            "items": {
              "type": "object",
              "description": "Widget definition",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Widget name"
                },
                "width": {
                  "type": "integer",
                  "description": "Widget width"
                },
                "height": {
                  "type": "integer",
                  "description": "Widget height"
                },
                "x": {
                  "type": "integer",
                  "description": "Widget horizontal position"
                },
                "y": {
                  "type": "integer",
                  "description": "Widget vertical position"
                },
                "definition": {
                  "type": "string",
                  "description": "Widget definition"
                }
              },
              "required": [
                "name",
                "definition"
              ]
            }
          }
        },
        "required": [
          "type",
          "content"
        ]
      }
    }
  },
  "required": [
    "name",
    "layout"
  ]
}
