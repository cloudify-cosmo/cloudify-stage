{
  "source": "./app/components/basic",
  "destination": "./doc/www",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "undocumentIdentifier": {"enable": false},
        "brand": {
          "title": "Cloudify widgets components documentation",
          "logo": "./app/images/favicon.png",
          "site": "https://github.com/cloudify-cosmo/cloudify-stage",
          "repository": "https://github.com/cloudify-cosmo/cloudify-stage.git"
        },
        "manual": {
          "index": "./doc/index.md",
          "asset": "./doc/asset",
          "files": ["./doc/index.md"]
        }
      }
    },
    {
      "name": "esdoc-ecmascript-proposal-plugin",
      "option": {"all": true}
    },
    {
      "name": "esdoc-jsx-plugin",
      "option": {"enable": true}
    },
    {
      "name": "esdoc-publish-html-plugin",
      "option": {"template": "./doc/template"}
    }
  ],

  "index": "./doc/index.md"

}