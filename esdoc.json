{
  "source": "./app/components/basic",
  "destination": "./doc/components/basic",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "undocumentIdentifier": {"enable": false},
        "brand": {
          "title": "Cloudify UI"
        },
        "manual": {
          "files": [
            "./doc/widgets/readme.md"
          ],
          "asset": "./doc/asset"
        }
      }
    },
    {
      "name": "esdoc-ecmascript-proposal-plugin",
      "option": {"all": true}
    },
    {
      "name": "esdoc-jsx-plugin",
      "option": {"enable": true}
    }
  ],

  "index": "./doc/index.md"

}